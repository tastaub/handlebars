<h1>Eat-Da-Burger!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        {{#each burgers}}
          {{#unless devoured}}
            <div>
              <form>
                  <div class="food-btn">
                      <button class="btn btn-primary eat-btn" data-id={{this.id}}>{{this.burger_name}} <i class="fas fa-utensils"></i></button>
                  </div>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-sm-6">
        <button id="clear-btn" class="btn btn-warning">Throw Away Trash</button>
        {{#each burgers}}
          {{#if devoured}}
                <div class="burger-div">
                    <button class="btn btn-danger del-btn" data-id={{this.id}}>{{this.burger_name}} <i class="fas fa-trash-alt"></i></button>
                </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
  <div class="col-sm-12">
    <form action="/burgers" method="POST">
      <input type="text" id="name" name="burger_name" placeholder="Uber Delicious Burger">
      <button type="submit" class="addBurgerButton">Add The Burger</button>
    </form>
  </div>
</div>